<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colourGameboard"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bot_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/player"
        android:tag="bot.player" />

    <ImageView
        android:id="@+id/bot_monster_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/monster_red"
        android:translationX="200dp" />

    <LinearLayout
        android:id="@+id/panel_floors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:showDividers="middle"
        android:divider="@drawable/empty_tall_divider"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bot_floor_1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/floortile" />

            <ImageView
                android:id="@+id/bot_floor_1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/floortile"
                android:layout_marginLeft="50dp"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bot_floor_2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/floortile_medium"
                android:translationX="100dp"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bot_floor_3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/floortile_large"
                android:translationX="200dp"
                 />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>